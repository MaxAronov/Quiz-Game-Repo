#page-header {
  display: flex;
  justify-content: center;
  margin: auto;
  margin-top: 5vh;
  width: 90vw;
  height: 40vh;
  background-color: #343d4b;
  border-radius: 1rem;
  border-top: 0.3rem solid #4e5662;
  border-bottom: 0.3rem solid #474c52;
  border-left: 0.3rem solid #4e5662;
  border-right: 0.3rem solid #474c52;
}

#title-text-container {
  display: flex;
  justify-content: center;
  margin: auto;
  width: 80%;
  height: 50%;
}

#title-text {
  margin: auto;
  text-align: center;
  font-family: Staatliches, cursive;
  color: #9db1c0;
  font-size: 5rem;
  letter-spacing: 0.5rem;
  text-transform: uppercase;
}

html,
body {
  margin: 0;
  padding: 0;
}

body {
  background-color: #293e5a;
  scroll-behavior: smooth;
}

body::-webkit-scrollbar {
  display: none;
}

#particles-js {
  width: 100%;
  height: 90%;
}